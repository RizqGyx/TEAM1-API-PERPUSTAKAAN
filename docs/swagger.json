    "/user/findbysearch": {
      "get": {
        "tags": ["Users"],
        "security": [
          {
            "bearerToken": []
          }
        ],
        "summary": "Mencari pengguna berdasarkan filter",
        "description": "API untuk mencari pengguna berdasarkan filter yang diberikan",
        "parameters": [
          {
            "in": "query",
            "name": "city",
            "description": "Nama kota pengguna",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "address",
            "description": "Alamat pengguna",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "name",
            "description": "Nama pengguna",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "role",
            "description": "Peran pengguna",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "page",
            "description": "Nomor halaman",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "in": "query",
            "name": "limit",
            "description": "Batas jumlah item per halaman",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pengguna ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "users": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "integer",
                                "example": 1
                              },
                              "name": {
                                "type": "string",
                                "example": "John Doe"
                              },
                              "city": {
                                "type": "string",
                                "example": "New York"
                              },
                              "address": {
                                "type": "string",
                                "example": "123 Main Street"
                              },
                              "role": {
                                "type": "string",
                                "example": "Admin"
                              }
                            }
                          }
                        },
                        "totalItems": {
                          "type": "integer"
                        },
                        "totalPages": {
                          "type": "integer"
                        },
                        "currentPage": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Gagal mencari pengguna",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Error message here"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },    
